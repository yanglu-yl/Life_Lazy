<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.module_enrtance.SplashActivity">

    <com.example.module_enrtance.AnimLogoView
        android:id="@+id/anim_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/city"
        app:autoPlay="false"
        app:gradientAnimDuration="2000"
        app:gradientColor="@color/teal_200"
        app:offsetAnimDuration="1500"
        app:showGradient="true"
        app:textColor="@color/purple_500"
        app:textPadding="2dp"
        app:textSize="30sp"
        app:verticalOffset="50dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_android"/>

    <ImageView
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        app:layout_constraintLeft_toLeftOf="@+id/anim_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/ic_city" />
</androidx.constraintlayout.widget.ConstraintLayout>